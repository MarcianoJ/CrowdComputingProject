<p id="notice"><%= notice %></p>

<h1>Classification Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dataset</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classification_options.each do |classification_option| %>
      <tr>
        <td><%= classification_option.name %></td>
        <td><%= classification_option.task.representable_name %></td>
        <td><%= link_to 'Show', classification_option %></td>
        <td><%= link_to 'Edit', edit_classification_option_path(classification_option) %></td>
        <td><%= link_to 'Destroy', classification_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classification Option', new_classification_option_path %>
